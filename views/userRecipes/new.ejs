<% include ../partials/header %>
  <h1>Add A New Recipe</h1>
  <form action="/recipe_books/<%= recipeBook.id %>/user_recipes" method="post">
    <div>
      <label>Recipe Title:
        <input type="text" name="title" placeholder="Recipe Title">
      </label>
    </div>
    <div>
      <label>Image URL:
        <input type="text" name="imageUrl" place="Image URL" placeholder="Image URL">
      </label>
    </div>
    <div>
      <label>Ingredients:
        <textarea name="ingredients" rows="8" cols="40" placeholder="1/2 cup this &#10; 1/3 cup that"></textarea>
      </label>
    </div>
    <div>
      <label>Directions:
      </label>
      <textarea name="directions" rows="8" cols="40" placeholder="1. Do this &#10;2. Do that"></textarea>
    </div>
    <br>
    <button class="waves-effect waves-light btn" type="submit" name="submit">Add Recipe</button>
  </form>
  <br>
  <a href="/">Back To Recipe Books</a><br>
  <a href="/recipe_books/<%= recipeBook.id %>">Back To <%= viewHelpers.capitalize(recipeBook.title) %> Recipes</a>
<% include ../partials/footer %>
