<% include ../partials/header %>
<h1>Sign up</h1>
<div class="row">
  <form method="POST" action="/signup" >
    <div class="row">
    <div class="col s4">
      <div class="form-group">
        <label>First Name:
          <input type="text" id="first-name" name="user[firstName]" class="form-control" autofocus>
        </label>
      </div>
    </div>
  </div>
  </br>
  <div class="row">
  <div class="col s4">
    <div class="form-group">
      <label>Last Name:
        <input type="text" id="last-name" name="user[lastName]" class="form-control">
      </label>
    </div>
  </div>
</div>
</br>
  <div class="row">
    <div class="col s4">
      <div class="form-group">
        <label>Email:
          <input type="email" id="email" name="user[email]" class="form-control" >
        </label>
      </div>
    </div>
  </div>
  </br>
  <div class="row">
    <div class="col s4">
      <div class="form-group">
        <label> Password:
          <input type="password" id="password" name="user[password]" class="form-control">
        </label>
      </div>
    </div>
  </div>
  </br>
  <div class="row">
    <div class="col s4">
      <div class="form-group">
        <input type="submit" value="Sign up" class="btn btn-primary">
      </div>
    </div>
  </div>
  </form>
</div>

</br></br>
<a href="/login">Already have an account? Login in here</a>
